<Window x:Class="Sovelluskehitys_JS25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sovelluskehitys_JS25"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">

                    <DataGrid x:Name="productlist" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="80,233,59,27"/>
                    <Button Content="Fetch data" HorizontalAlignment="Left" Margin="80,191,0,0" VerticalAlignment="Top" Height="26" Width="126" Click="Button_Click_1"/>


                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Nimi" HorizontalAlignment="Left" Margin="39,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.422,0.629"/>
                    <Label Content="Price" HorizontalAlignment="Left" Margin="39,132,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.422,0.629"/>
                    <Label Content="Varastosaldo" HorizontalAlignment="Left" Margin="39,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.422,0.629"/>
                    <Button Content="Add new" HorizontalAlignment="Left" Margin="136,177,0,0" VerticalAlignment="Top" Height="26" Width="126" Click="Button_Click"/>
                    <TextBox x:Name="Tex1" HorizontalAlignment="Left" Margin="142,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="Tex2" HorizontalAlignment="Left" Margin="142,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.502,3.36"/>
                    <TextBox x:Name="Tex3" HorizontalAlignment="Left" Margin="142,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <ComboBox x:Name="cb_products" HorizontalAlignment="Left" Margin="435,101,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="delete_product" Content="Delete product" HorizontalAlignment="Left" Margin="586,101,0,0" VerticalAlignment="Top" Click="delete_product_Click"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
